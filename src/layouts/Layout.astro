---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    font-family: "Montserrat", sans-serif;
    box-sizing: border-box;
  }

  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
  }

  :root {
    --width: 110%;
    --widthNegative: -110%;
  }

  body {
    background-color: rgb(38, 38, 58);
    overflow: hidden;
  }

  main {
    display: flex;
    height: 100vh;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  header {
    display: flex;
    height: 10dvh;
    background-color: rgba(87, 87, 163, 0.1);
    border-bottom: 10px solid rgb(87, 87, 163);
    align-items: center;
    justify-content: space-between;
  }

  .buttons-header {
    display: flex;
    flex-direction: row;
    row-gap: 10svh;
  }

  .buttons-header a {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(31, 31, 75);
    width: 120px;
    height: 40px;
    margin-left: 3svh;
    margin-top: 1svh;
    border-radius: 100px;
    text-decoration: none;
    font-weight: bold;
    color: rgb(87, 87, 163);
    transition: 0.5s;
    -webkit-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  .buttons-header a:hover {
    cursor: pointer;
    background-color: rgb(87, 87, 163);
    color: rgb(31, 31, 75);
    scale: 1.1;
  }

  .h1-header {
    color: rgb(87, 87, 163);
    font-size: 5vh;
    margin-bottom: 1vh;
    user-select: none;
    margin-top: 2.5vh;
    margin-left: 2.5vh;
    position: fixed;
    z-index: 1;
  }

  .buttons-header a:first-of-type {
    margin-left: 140px !important;
  }

  .socials {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 5vh;
    gap: 2vh;
  }

  main h1 {
    position: fixed;
    color: rgb(87, 87, 163);
    margin: 0;
    font-size: 10vh;
    user-select: none;
    margin-bottom: 160px;
  }

  .buttons {
    display: flex;
    flex-direction: column;
  }

  .buttons a {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(31, 31, 75);
    width: 15vh;
    height: 3vh;
    margin-top: 10px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: bold;
    color: rgb(87, 87, 163);
    padding: 10px;
    transition: 0.5s;
    -webkit-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  .buttons a:hover {
    cursor: pointer;
    background-color: rgb(87, 87, 163);
    color: rgb(31, 31, 75);
    scale: 1.1;
  }

  footer {
    position: absolute;
    bottom: 0;
    padding: 20px;
  }

  #countdown-button {
    border-radius: 2000px;
    height: 3.7vh;
    width: 3.7vh;
    border: none;
    background-color: rgb(31, 31, 75);
    color: rgb(87, 87, 163);
    font-weight: bold;
    border: 1px solid rgb(87, 87, 163);
    transition: 0.2s;
  }

  #countdown-button:hover {
    transform: scale(1.1);
    cursor: pointer;
    background-color: rgb(87, 87, 163);
    color: rgb(31, 31, 75);
  }

  .transition-bg {
    transition: 1000ms;
    opacity: 1;
  }

  html.is-animating .transition-bg {
    opacity: 0;
  }

  .bg {
    position: absolute;
    top: 0;
    display: flex;
    flex-direction: column;
    z-index: -1;
  }

  .bg .square {
    width: 100vh;
    height: 20vh;
    background-color: rgba(68, 68, 109, 0.2);
  }

  .bg .square:first-child,
  .bg .square:nth-child(3),
  .bg .square:last-child {
    animation: squareOdd 10s linear infinite;
  }

  .bg .square:nth-child(2),
  .bg .square:nth-child(4) {
    animation: squareEven 10s linear infinite;
  }

  @keyframes squareOdd {
    0% {
      transform: translateX(var(--widthNegative));
    }
    25% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(var(--width));
    }
    75% {
      transform: translateX(0);
    }

    100% {
      transform: translateX(var(--widthNegative));
    }
  }

  @keyframes squareEven {
    0% {
      transform: translateX(var(--width));
    }
    25% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(var(--widthNegative));
    }
    75% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(var(--width));
    }
  }

  @media screen and (orientation: landscape) {
    .buttons {
      flex-direction: row;
    }
    .buttons a {
      margin: 10px;
      width: 20vh;
      height: 6vh;
    }
  }

  @media screen and (min-width: 768px) {
    .bg .square:first-child,
    .bg .square:nth-child(3),
    .bg .square:last-child {
      animation-duration: 30s;
      width: 100vw;
    }
    .bg .square:nth-child(2),
    .bg .square:nth-child(4) {
      animation-duration: 30s;
      width: 100vw;
    }

    @keyframes squareOdd {
      0% {
        transform: translateX(-100vw);
      }
      50% {
        transform: translateX(100vw);
      }
      100% {
        transform: translateX(-100vw);
      }
    }

    @keyframes squareEven {
      0% {
        transform: translateX(100vw);
      }
      50% {
        transform: translateX(-100vw);
      }
      100% {
        transform: translateX(100vw);
      }
    }
  }

  @media screen and (max-width: 800px) {
    .skin {
      flex-direction: column;
      gap: 2svh;
    }
    body {
      overflow: auto;
    }
    main {
      min-width: 100vw;
      height: auto;
    }
  }
</style>
